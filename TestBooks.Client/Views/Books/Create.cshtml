@{
}



<div class="row">
    <div class="col">
        <form asp-action="create" asp-controller="books" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Titulo</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Titulo">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Descripcion</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Descripcion">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Paginas</label>
                <input type="number" class="form-control" asp-for="PageCount" placeholder="Cantidad de paginas">
                <span asp-validation-for="PageCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Extracto</label>
                <input type="text" class="form-control" asp-for="Excerpt" placeholder="Extracto">
                <span asp-validation-for="Excerpt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Fecha de Publicacion</label>
                <input type="datetime" class="form-control" asp-for="PublishDate" placeholder="Fecha de Publicacion">
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

