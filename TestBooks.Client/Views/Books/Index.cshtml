@model TestBooks.Client.Models.TaskResult<IEnumerable<Books>>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="col m-3">
        <a class="btn btn-primary" asp-controller="books" asp-action="create">Agregar</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Pages Count</th>
            <th>Excerpt</th>
            <th>Publish Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var books in Model.Data)
        {
            <tr>
                <td>@books.Id</td>
                <td>@books.Title</td>
                <td>@books.Description</td>
                <td>@books.PageCount</td>
                <td>@books.Excerpt</td>
                <td>@books.PublishDate.ToString("MM/dd/yyyy")</td>
                <td> 
                    <div class="row">
                        <div class="col mt-1"><button class="btn btn-primary">Ver</button>  </div>
                        <div class="col mt-1"><button class="btn btn-warning">Editar</button>  </div>
                        <div class="col mt-1"><button class="btn btn-danger">Eliminar</button></div>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

